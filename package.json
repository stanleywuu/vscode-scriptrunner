{
	"name": "scriptrunner",
	"displayName": "scriptrunner",
	"description": "It is an extension that collects, discovers, and potentially creates scripts within the current workspace",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:task-list"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "task-explorer",
					"title": "Task Explorer",
					"icon": ""
				}
			]
		},
		"views": {
			"task-explorer": [
				{
					"id": "task-list",
					"name": "Discovered Scripts"
				},
				{   "id": "task-list-defined",
					"name": "Custom scripts"
				}	
			]
		},
		"commands": [
			{
				"command": "task-list.refresh",
				"title": "RefreshTest",
				"icon": {
					"light": "res/refresh.svg",
					"dark": "res/refresh.svg"
				}
			},
			{
				"command": "task-list.ignore",
				"title": "Ignore File",
				"icon": {
					"light": "res/exclude.svg",
					"dark": "res/exclude.svg"
				}
			},
			{
				"command": "task-list.execute",
				"title": "Execute",
				"icon": {
					"light": "res/run-all.svg",
					"dark": "res/run-all.svg"
				}
			},
			{
				"command": "task-list.customize",
				"title": "Customize",
				"icon": {
					"light": "res/add.svg",
					"dark": "res/add.svg"
				}
			},
			{
				"command": "task-list.edit",
				"title": "Edit",
				"icon":{
					"light": "res/edit.svg",
					"dark": "res/edit.svg"
				}
			}

		],
		"menus": {
			"view/title": [
				{
					"command": "task-list.refresh",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "task-list.ignore",
					"group": "inline"
				},
				{
					"command": "task-list.execute",
					"group": "inline"
				},
				{
					"command": "task-list.customize",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.49.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"path": "^0.12.7"
	}
}
